            div
                textarea(name="info_adicionais")


script.
    const divControlado = document.getElementsByName('controlado')
    const divOrgao = document.querySelector('#orgao')
    divControlado.forEach(control => {
        control.addEventListener('click', function(){
            if (control.value == 'sim')
                divOrgao.classList.remove('hidden')
            else
                divOrgao.classList.add('hidden')
        })
    })