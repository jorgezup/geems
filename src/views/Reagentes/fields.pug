                input(type="text", name="localizacao" value=reagente.localizacao)
    div.item
        div Incompatibilidade
            div
                input(type="text", name="incompatibilidade" value=reagente.incompatibilidade)
    div.item
        div Controlado
            div.radio
                if reagente.controlado == 'sim'
                    span
                        input(type="radio", name="controlado" id="sim" value="sim" checked)
                        |  Sim
                    span
                        input(type="radio", name="controlado" id="não" value="não")
                        | Não
                else 
                    span
                        input(type="radio", name="controlado" id="sim" value="sim" )
                        |  Sim
                    span
                        input(type="radio", name="controlado" id="não" value="não" checked)
                        | Não

    if reagente.controlado == 'não'
        div#orgao.item.hidden
            div Órgão
                select(name="orgao")
                    option(value="Exército") Exército
                    option(value="Polícia Federal") Polícia Federal
    else
        div#orgao.item
            div Órgão
                select(name="orgao" required)
                    option(value="Exército") Exército
                    option(value="Polícia Federal") Polícia Federal


    div.item
        div Informações Adicionais
            div
                textarea(name="info_adicionais")= reagente.info_adicionais 
else
    div.item
        div Nome Comum
            div
                input(type="text", name="nome_comum")
    div.item        
        div Nome Oficial
            div
                input(type="text", name="nome_oficial")
    div.item
        div Fórmula Molecular
            div
                input(type="text", name="formula_molecular")
    div.item            
        div Marca
