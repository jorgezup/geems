extends ../../layout.pug

block content
    section.container.form.card
        .error-lottie
        div
            h3 Desculpe! 
            h3 Você não pode deletar sua própria conta!

        .center
            a(href="#" onclick="history.back()") Voltar
    
    script(src='/lottie.min.js')

    script. 
        const element = document.querySelector('.error-lottie')

        lottie.loadAnimation({
            container: element, // the dom element that will contain the animation
            renderer: 'svg',
            loop: false,
            autoplay: true,
            path: '/7479-access-denied.json' // the path to the animation json
        })
        setTimeout(() => {
            window.location.href = '/users/list'
        },3200)