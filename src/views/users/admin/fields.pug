if user
    input(type="hidden", name="id" value=user.id)
    .item
        div Nome
            div
                input(type="text", name="nome", placeholder="Digite o nome completo" value=user.nome)

    .item
        div Email
            div
                input(type="email", name="email" placeholder="Digite o email" value=user.email required)

    .item
        div Passaporte
            div
                input(type="text", name="passaporte" placeholder="Digite o passaporte da UFMS" value=user.passaporte required)

    div.item
        div Cargo
            div
                select(name="cargo")
                    each cargo in cargos
                        p=cargo
                        if user.cargo == cargo
                            option(value=cargo selected) cargo
                        else    
                            option(value=cargo) cargo.name


    .item#administrador
        div Administrador
        div
            if user.is_admin == true
                input(type="checkbox", name="is_admin" value="true" checked )
            else
                input(type="checkbox", name="is_admin" value="true")

else
    .item
        div Nome
            div
                input(type="text", name="nome", placeholder="Digite o nome completo")

    .item
        div Email
            div
                input(type="email", name="email" placeholder="Digite o email" required)

    .item
        div Passaporte
            div
                input(type="text", name="passaporte" placeholder="Digite o passaporte da UFMS" required)

    .item
        div Cargo
            div
                select(name="cargo" required)
                    option()
                    option(value="aluno") Aluno
