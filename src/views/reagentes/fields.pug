                    input(type="radio", name="estado" value="líquido" checked) 
                    | Líquido (Litro)
    div.item
        div Quantidade
            div
                input(type="number", name="quantidade")
    div.item
        div Localização
            div
                select.obrigatorio(name="localizacao")
                    option()
